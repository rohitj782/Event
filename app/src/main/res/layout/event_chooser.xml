<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:fontFamily="@font/roboto"
            android:hint="Enter Title" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
    <TextView
            android:text="Choose Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            android:fontFamily="@font/roboto" android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCategory" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/editTextTitle" android:hint="Enter Category"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNext" app:layout_constraintEnd_toEndOf="@+id/editTextCategory"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/editTextCategory"
            android:fontFamily="@font/roboto" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="Create Event      "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto" android:textSize="20sp"
            android:textColor="@android:color/white" android:textAlignment="center" android:padding="15dp"
            android:background="@drawable/main_background"
            app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.15"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.85"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4" android:textSize="24sp"
            android:fontFamily="@font/roboto"/>
</android.support.constraint.ConstraintLayout>